{
    "author": "ryan@rsg.io",
    "targets": {
        "build": {
            "source": "build/*",
            "destination": "{DEPLOY_ROOT}/lib/python/%1",
            "options": {"match": "content"}
        },
        "bin": {
            "source": "bin/*",
            "destination": "{DEPLOY_ROOT}/bin/%1"
        },
        "env": {
            "source": "distman.env",
            "destination": "{DEPLOY_ROOT}/env/distman.env"
        },
        "lib": {
            "source": "lib/distman",
            "destination": "{DEPLOY_ROOT}/lib/python/distman",
            "pipeline": {
                "formatting": {
                    "script": ["black --check {input}"]
                }
            }
        }
    }
}